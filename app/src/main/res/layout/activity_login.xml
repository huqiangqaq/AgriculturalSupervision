<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_content"
    tools:context="agricultural.nxt.agriculturalsupervision.Activity.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/tittle"/>
            <ImageView
                android:layout_marginTop="40dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_02"/>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="@drawable/login_bg">

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@mipmap/login_accout"/>
                <EditText
                    android:textColorHint="@color/white"
                    android:gravity="center"
                    style="@style/login_text"
                    android:layout_marginRight="50dp"
                    android:id="@+id/etUserName"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:hint="手机、邮箱、用户名"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/login_bg">

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@mipmap/icon_lock"/>
                <EditText
                    android:textColorHint="@color/white"
                    style="@style/login_text"
                    android:gravity="center"
                    android:layout_marginRight="50dp"
                    android:id="@+id/etPassWord"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:hint="密码"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:id="@+id/tv_resgister"
                    android:layout_alignParentLeft="true"
                    style="@style/login_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击注册"/>

                <TextView
                    android:padding="5dp"
                    android:id="@+id/tv_forget_pwd"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    style="@style/login_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_marginTop="20dp"
                android:gravity="center"
                style="@style/login_text"
                android:text="登陆"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/selector_btn"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
