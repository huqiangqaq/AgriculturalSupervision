<?xml version="1.0" encoding="utf-8"?>
<agricultural.nxt.agriculturalsupervision.Widget.SwipeMenuView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">
    <LinearLayout
        android:id="@+id/swipe_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/selector_common_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                style="@style/commontext"
                android:text="种子编号:"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_id"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                style="@style/commontext"
                android:text="2251678961482222"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                style="@style/commontext"
                android:text="种子名称:"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                style="@style/commontext"
                android:text="包菜种子"/>
        </LinearLayout>
        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    style="@style/commontext"
                    android:text="种子类别:"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_specie"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    style="@style/commontext"
                    android:text="包菜种子"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    style="@style/commontext"
                    android:text="生产单位:"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    style="@style/commontext"
                    android:text="江西省农业工程有限公司"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--<Button-->
        <!--android:id="@+id/btnTop"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="#d9dee4"-->
        <!--android:text="置顶"-->
        <!--android:textColor="@android:color/white"/>-->

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#ecd50a"
        android:clickable="true"
        android:text="修改"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/color_ff4a57"
        android:text="删除"
        android:textColor="@android:color/white"/>

</agricultural.nxt.agriculturalsupervision.Widget.SwipeMenuView>