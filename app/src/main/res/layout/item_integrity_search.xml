<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_common_layout"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/commontext"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="被投诉企业:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/vcillegalcomp"
                style="@style/commontext"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="2251678961482222" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_handle"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_integrity"
            android:text="已处理" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/commontext"
                android:layout_marginLeft="15dp"
                android:text="被投诉产品:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/vcillegalprod"
                style="@style/commontext"
                android:layout_marginLeft="5dp"
                android:text="包菜种子" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                style="@style/commontext"
                android:layout_marginLeft="15dp"
                android:text="产品类别:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/iproducttype"
                style="@style/commontext"
                android:layout_marginLeft="5dp"
                android:text="包菜种子" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            style="@style/commontext"
            android:layout_marginLeft="15dp"
            android:text="违法发生时间:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/dtarosedate"
            style="@style/commontext"
            android:layout_marginLeft="5dp"
            android:text="包菜种子" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/commontext"
                android:layout_marginLeft="15dp"
                android:text="投诉单位:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/ownerName"
                style="@style/commontext"
                android:layout_marginLeft="5dp"
                android:text="江西省农业工程有限公司" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>