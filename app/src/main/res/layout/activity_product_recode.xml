<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_product_recode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="agricultural.nxt.agriculturalsupervision.Activity.ProductRecodeActivity">

    <agricultural.nxt.agriculturalsupervision.Widget.LetToolBar
        android:id="@+id/lettoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@color/common_color"
        android:minHeight="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways"
        app:leftButtonIcon="@mipmap/back"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="主页"
        app:titleTextColor="@color/whitesmoke"
        app:titleTextSize="6sp"/>

    <RelativeLayout
        android:id="@+id/rl_product_recode"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image_one"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@mipmap/product_recode"/>
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_recode"/>
        <ImageView
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@mipmap/icon_arrow"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>

    <RelativeLayout
        android:id="@+id/rl_batch_code"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image_two"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@mipmap/batch_code"/>
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批次码打印"/>
        <ImageView
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@mipmap/icon_arrow"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
    <RelativeLayout
        android:id="@+id/rl_security_code"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/image_third"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@mipmap/security_code"/>
        <TextView
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防伪码打印"/>
        <ImageView
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@mipmap/icon_arrow"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>

</LinearLayout>
