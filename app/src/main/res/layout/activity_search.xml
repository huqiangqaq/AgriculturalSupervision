<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="agricultural.nxt.agriculturalsupervision.Activity.pesticideLib.SearchActivity">
    <include layout="@layout/main_toolbar"/>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="登记证号:"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinput"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/registrationNo"
                android:layout_marginLeft="15dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="产品名称:"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinput2"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/name"
                android:layout_marginLeft="15dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="生产厂家:"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinput3"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/companyName"
                android:layout_marginLeft="15dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="毒性:"/>
        <agricultural.nxt.agriculturalsupervision.Widget.NiceSpinner
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/sp_toxicity"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_search"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询"
        android:background="@drawable/selector_common_btn"/>

</LinearLayout>
